{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "types": ["vitest/globals", "node", "react"],
    "jsx": "react-jsx",
    "paths": {
      "@/assets/*": ["./src/assets/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
